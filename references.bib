	journal = {Sag 2006},
	author = {Karageorgos, By John and Genovese, Paul and Baas, Dirk and Process, Principal and Engineer, Control and Controls, Manta and Process, Senior and Engineer, Control and Controls, Manta and Process, Senior and Engineer, Control},
	year = {2006},
	keywords = {Comminution, Crushing, Distributed control system, Energy consumption, Expert system, Grinding, Mill load, Mill speed, Ore feed, Process control, SAG/AG mill, Survey},
	pages = {16},
	file = {Karageorgos et al_2006_Current Trends in SAG and AG Mill Operability and Control.pdf:/Users/billtubbs/Documents/Zotero/Karageorgos et al_2006_Current Trends in SAG and AG Mill Operability and Control.pdf:application/pdf},
